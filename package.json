{
  "name": "ifollow",
  "version": "0.1.0",
  "engines": {
    "node": ">10.x"
  },
  "scripts": {
    "start": "yarn api:serve",
    "build": "concurrently -r --kill-others-on-fail \"yarn api:build\" \"yarn ui:build\"",
    "build:ci": "concurrently -r --kill-others-on-fail \"yarn api:build:ci\" \"yarn ui:build:ci\"",
    "clean": "concurrently -r \"yarn api:clean\" \"yarn ui:clean\"",
    "lint": "concurrently -r \"yarn api:lint\" \"yarn ui:lint\"",
    "test": "concurrently -r \"yarn api:test\" \"yarn ui:test\"",
    "api:build": "tsc",
    "api:build:ci": "yarn api:build",
    "api:clean": "rimraf build",
    "api:serve": "node build/index.js",
    "api:lint": "tslint -c tslint.json 'src/**/*.ts'",
    "api:test": "cross-env CI=true NODE_ENV=test jest src",
    "ui:build": "cd react-ui && yarn && yarn build",
    "ui:build:ci": "cd react-ui && yarn build",
    "ui:clean": "cd react-ui && yarn clean",
    "ui:lint": "cd react-ui && yarn lint",
    "ui:test": "cd react-ui && yarn test"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "express": "^4.16.4",
    "mongodb": "^3.2.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capitnflam/ifollow.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/mongodb": "^3.1.28",
    "@types/node": "^12.0.12",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "jest": "24.7.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.+(ts|js)"
    ]
  }
}
