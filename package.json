  "description": "Track the shows you are following.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "coverage": "yarn test --coverage",
    "lint": "eslint src/*.js tests/*.js",
